<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MiddleActivity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/town">


    <TextView
        android:id="@+id/middle_speech"
        android:text="(click here to start story)"
        android:textSize="30dp"
        android:onClick="nextSpeech"
        android:clickable="true"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/farmer_MidID"
        android:layout_width="191dp"
        android:layout_height="140dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:scaleType="centerCrop"
        android:scaleX="-1"
        android:src="@drawable/farmer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        />

    <ImageView
        android:id="@+id/old_MidID"
        android:layout_width="191dp"
        android:layout_height="140dp"
        android:layout_marginLeft="24dp"
        android:adjustViewBounds="true"
        android:maxWidth="300dp"
        android:scaleType="centerCrop"
        android:scaleX="-1"
        android:src="@drawable/old"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.776"
        android:alpha="0"
        />



</android.support.constraint.ConstraintLayout>